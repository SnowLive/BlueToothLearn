<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_center"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:layout_centerInParent="true"
    android:orientation="vertical">
    <Button
        android:id="@+id/btopenBLE"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="@string/openBLE"
        />

    <Button
        android:id="@+id/btcloseBLE"
        android:layout_width="88dp"
        android:layout_height="wrap_content"
        android:text="@string/closeBLE"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="#ff0000"
        />

        />
    <TextView
        android:id="@+id/tvDeviceShow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/showDevice"
        android:textSize="20dp"
        android:padding="5dp"
        android:gravity="center_horizontal"
        />
    <Button
        android:id="@+id/btbondBLE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/bondBLE"
        />


    <Button
        android:id="@+id/btsearchBLE"
        android:layout_width="88dp"
        android:layout_height="wrap_content"
        android:text="@string/searchBLE"
        />
</LinearLayout>
